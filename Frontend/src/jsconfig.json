{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true
  },
  // "include": [
  //   "src/**/*"
  // ],
  // "exclude": [
  //   "node_modules",
  //   "build",
  //   "dist"
  // ],
  "paths": {
    "abi/*": [
      "./abi/*"
    ],
    "assets/*": [
      "./assets/*"
    ],
    "components/*": [
      "./components/*"
    ],
    "config/*": [
      "./config/*"
    ],
    "hooks/*": [
      "./hooks/*"
    ],
    "store/*": [
      "./store/*"
    ],
    "pages/*": [
      "./pages/*"
    ],
    "services/*": [
      "./services/*"
    ],
    "utils/*": [
      "./utils/*"
    ]
  }
}